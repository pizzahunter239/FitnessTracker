@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="row">
    <div class="col-12">
        <div class="p-4 mb-4 bg-dark text-white text-center rounded">
            <h1 class="display-4"><i class="fas fa-shield-alt"></i> Privacy Policy</h1>
            <p class="lead">Your privacy and data security are our top priorities</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow border-0">
            <div class="card-body p-5">
                <p class="text-muted mb-4">
                    <strong>Last updated:</strong> September 13, 2025
                </p>

                <h3 class="text-primary mb-3">Information We Collect</h3>
                <p class="mb-4">
                    At FitLife Tracker, we collect information to provide better services to our users.
                    This includes:
                </p>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item border-0 ps-0">
                        <i class="fas fa-user text-info me-2"></i>
                        <strong>Account Information:</strong> Name, email address, and profile details
                    </li>
                    <li class="list-group-item border-0 ps-0">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        <strong>Fitness Data:</strong> Workout logs, progress tracking, and health metrics
                    </li>
                    <li class="list-group-item border-0 ps-0">
                        <i class="fas fa-mobile-alt text-warning me-2"></i>
                        <strong>Device Information:</strong> Device type, operating system, and app usage
                    </li>
                </ul>

                <h3 class="text-primary mb-3">How We Use Your Information</h3>
                <p class="mb-4">
                    We use the information we collect to:
                </p>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Provide and improve our services</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Personalize your experience</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Send important notifications</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3"></i>
                            <span>Analyze usage patterns</span>
                        </div>
                    </div>
                </div>

                <h3 class="text-primary mb-3">Data Security</h3>
                <p class="mb-4">
                    We implement industry-standard security measures to protect your personal information:
                </p>
                <div class="bg-light p-4 rounded mb-4">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="text-center">
                                <i class="fas fa-lock fa-2x text-primary mb-2"></i>
                                <h6>Encryption</h6>
                                <small class="text-muted">Data encrypted in transit and at rest</small>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="text-center">
                                <i class="fas fa-server fa-2x text-success mb-2"></i>
                                <h6>Secure Servers</h6>
                                <small class="text-muted">Protected infrastructure and regular audits</small>
                            </div>
                        </div>
                    </div>
                </div>

                <h3 class="text-primary mb-3">Your Rights</h3>
                <p class="mb-3">
                    You have the right to:
                </p>
                <ul class="mb-4">
                    <li class="mb-2">Access your personal data</li>
                    <li class="mb-2">Correct inaccurate information</li>
                    <li class="mb-2">Delete your account and data</li>
                    <li class="mb-2">Export your data</li>
                    <li class="mb-2">Opt-out of marketing communications</li>
                </ul>

                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Questions about privacy?</strong>
                    Contact our privacy team at privacy@fitlifetracker.com
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-primary">
                        <i class="fas fa-envelope"></i> Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>