@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-12">
        <div class="p-5 mb-4 bg-gradient text-white text-center rounded shadow" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h1 class="display-3 fw-bold"><i class="fas fa-heartbeat"></i> FitLife Tracker</h1>
            <p class="lead fs-4">Your personal journey to a healthier lifestyle starts here</p>
            <hr class="my-4 bg-white">
            <p class="mb-4">Track your fitness goals, monitor your progress, and stay motivated with our comprehensive health platform</p>
            <a class="btn btn-light btn-lg shadow" href="#features" role="button">
                <i class="fas fa-rocket"></i> Get Started
            </a>
        </div>
    </div>
</div>

<div id="features" class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="bg-primary rounded-circle d-inline-flex p-3 mb-3">
                    <i class="fas fa-running text-white fa-2x"></i>
                </div>
                <h3 class="card-title text-primary">Fitness Tracking</h3>
                <p class="card-text">
                    Monitor your daily activities, workouts, and exercise routines. Set goals and track your progress over time.
                </p>
                <a href="#" class="btn btn-outline-primary">Learn More</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="bg-success rounded-circle d-inline-flex p-3 mb-3">
                    <i class="fas fa-apple-alt text-white fa-2x"></i>
                </div>
                <h3 class="card-title text-success">Nutrition Guide</h3>
                <p class="card-text">
                    Discover healthy recipes, track your meals, and get personalized nutrition recommendations for your goals.
                </p>
                <a href="#" class="btn btn-outline-success">Explore Recipes</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-4">
                <div class="bg-info rounded-circle d-inline-flex p-3 mb-3">
                    <i class="fas fa-chart-line text-white fa-2x"></i>
                </div>
                <h3 class="card-title text-info">Progress Analytics</h3>
                <p class="card-text">
                    Visualize your health data with detailed charts and insights to help you stay on track.
                </p>
                <a href="#" class="btn btn-outline-info">View Stats</a>
            </div>
        </div>
    </div>
</div>

<div class="row align-items-center mb-5">
    <div class="col-lg-6">
        <img src="~/Images/fitness-journey.jpg" alt="Fitness Journey" class="img-fluid rounded-3 shadow" />
    </div>
    <div class="col-lg-6">
        <div class="ps-lg-4">
            <h2 class="text-dark mb-4">Start Your Transformation Today</h2>
            <p class="lead text-muted mb-4">
                Join thousands of users who have transformed their lives with FitLife Tracker.
                Whether you're just starting your fitness journey or looking to optimize your current routine,
                we have the tools and community to support you.
            </p>
            <div class="row g-3 mb-4">
                <div class="col-sm-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>Personal Goal Setting</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>Community Support</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>Expert Guidance</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <span>Progress Tracking</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto text-center">
        <img src="~/Images/team-workout.jpg" alt="Team Workout" class="img-fluid rounded-circle mb-4 shadow" style="width: 200px; height: 200px; object-fit: cover;" />
        <h3 class="text-primary mb-3">Join Our Community</h3>
        <p class="text-muted">
            Connect with like-minded individuals, share your progress, and get motivated by success stories from our community.
        </p>
    </div>
</div>