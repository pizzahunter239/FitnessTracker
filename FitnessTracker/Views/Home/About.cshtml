@{
    ViewData["Title"] = "About";
}

<div class="row">
    <div class="col-12">
        <div class="p-4 mb-4 bg-info text-white text-center rounded">
            <h1 class="display-4"><i class="fas fa-info-circle"></i> About FitLife Tracker</h1>
            <p class="lead">Empowering healthy lifestyles</p>
        </div>
    </div>
</div>

<div class="row align-items-center mb-5">
    <div class="col-lg-6">
        <h2 class="text-primary mb-4">Our Mission</h2>
        <p class="lead text-muted mb-4">
            At FitLife Tracker, we believe that everyone deserves access to the tools and support
            they need to live a healthier, happier life. Our mission is to make fitness tracking
            simple, engaging, and accessible to people of all fitness levels.
        </p>

        <h3 class="text-success mb-3">What We Offer</h3>
        <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item bg-light border-0 ps-0">
                <i class="fas fa-dumbbell text-primary me-3"></i>
                <strong>Comprehensive Fitness Tracking</strong> - Monitor workouts, steps, calories, and more
            </li>
            <li class="list-group-item bg-light border-0 ps-0">
                <i class="fas fa-utensils text-success me-3"></i>
                <strong>Nutrition Guidance</strong> - Track meals and get personalized recommendations
            </li>
            <li class="list-group-item bg-light border-0 ps-0">
                <i class="fas fa-users text-info me-3"></i>
                <strong>Community Support</strong> - Connect with others on similar journeys
            </li>
            <li class="list-group-item bg-light border-0 ps-0">
                <i class="fas fa-trophy text-warning me-3"></i>
                <strong>Goal Achievement</strong> - Set, track, and celebrate your milestones
            </li>
        </ul>
    </div>

    <div class="col-lg-6 text-center">
        <img src="~/Images/about-fitness.jpg" alt="Fitness Team" class="img-fluid rounded-3 shadow mb-4" />

        <div class="row g-3">
            <div class="col-4">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body">
                        <h4 class="card-title">50K+</h4>
                        <p class="card-text small mb-0">Active Users</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card bg-success text-white text-center">
                    <div class="card-body">
                        <h4 class="card-title">1M+</h4>
                        <p class="card-text small mb-0">Workouts Logged</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card bg-info text-white text-center">
                    <div class="card-body">
                        <h4 class="card-title">95%</h4>
                        <p class="card-text small mb-0">Success Rate</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-12">
        <div class="bg-light p-5 rounded">
            <h2 class="text-center text-dark mb-5">Our Story</h2>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <p class="text-muted text-center mb-4">
                        FitLife Tracker was founded in 2020 with a simple vision: to make healthy living
                        accessible and enjoyable for everyone. Our team of fitness enthusiasts, nutritionists,
                        and technology experts came together to create a platform that goes beyond just tracking
                        numbers - we focus on building sustainable, healthy habits.
                    </p>

                    <div class="text-center">
                        <h4 class="text-primary mb-3">Core Values</h4>
                        <div class="row g-3 justify-content-center">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                    <h6>Wellness First</h6>
                                    <small class="text-muted">Your health is our priority</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-hands-helping fa-2x text-success mb-2"></i>
                                    <h6>Community</h6>
                                    <small class="text-muted">Supporting each other's journey</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-lightbulb fa-2x text-warning mb-2"></i>
                                    <h6>Innovation</h6>
                                    <small class="text-muted">Constantly improving our platform</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
